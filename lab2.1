#include <stdio.h>

int main() {
    int a[4] = {-1, 2, 10, 7};
    int b[4];

    // Reverse elements of array 'a' into array 'b'
    for (int i = 0; i < 4; i++) {
        b[i] = a[3 - i];
    }

    // (a) Print the value of a[3]
    printf("a[3] = %d\n", a[3]);

    // (b) Print the value of b[3]
    printf("b[3] = %d\n", b[3]);

    // (c) Print the value of b[a[1]]
    // a[1] = 2, so this is equivalent to b[2]
    printf("b[a[1]] = %d\n", b[a[1]]);

    return 0;
}
